{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es2019",
		"module": "commonjs",
		"declaration": true,
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
	]
}
